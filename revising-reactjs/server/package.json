{
  "name": "@advanced-react/server",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch --clear-screen=false ./index.ts",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:regenerate": "rm -rf ./drizzle && rm database.db && pnpm drizzle:generate && pnpm drizzle:migrate && pnpm drizzle:seed",
    "drizzle:migrate": "drizzle-kit migrate",
    "drizzle:seed": "tsx ./database/seed.ts"
  },
  "dependencies": {
    "@advanced-react/shared": "workspace:*",
    "@trpc/server": "11.6.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.4.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "drizzle-zod": "^0.8.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "drizzle-kit": "^0.31.5",
    "tsx": "^4.20.6"
  }
}
